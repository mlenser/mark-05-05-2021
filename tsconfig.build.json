{
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "./build/es",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ESNext",
    "typeRoots": ["node_modules/@types", "./types"]
  },
  "exclude": ["node_modules", "src/**/*.test.*", "./build"],
  "include": ["src/**.ts", "src/**.tsx"]
}
